<h1>Books</h1>

<table>
  <tr>
	<th>Title</th>
	<th>Body</th>

  </tr>


	<tr>
	<% @books.each do |book| %>


	<td><%= book.title %></td>
	<td><%= book.body %></td>
	<td><%= link_to "Show", book_path(book.id), class: "show_#{book.id}" %></td>
	<td><%= link_to "Edit", edit_book_path(book.id), class: "edit_#{book.id}" %></td>
	<td><%= link_to "Destroy",destroy_book_path(book.id), class: "destory_#{book.id}", method: :delete, "data-confirm" =>"Are you sure?" %></td>

	</tr>
	<% end %>


</table>


<div>

	<h3>New book</h3>

	<%= form_for(@book) do |f| %>

		<h4>Title</h4>
		<%= f.text_field :title,class: "book_title" %>

		<h4>body</h4>
		<%= f.text_area :body,class: "book_body" %>
	<div>
		<%= f.submit 'Create Book' %>
		
	</div>
	<% end %>
</div>


